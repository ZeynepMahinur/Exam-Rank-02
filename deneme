#include <stdlib.h>

int count_len(int nbr)
{
   int len = 0;
   long n = nbr;

   if (n <= 0)
     len++;
   while (n != 0)
   {
     n /= 10;
     len++;
   }
   return(len);
}

char	*ft_itoa(int nbr)
{
    long n = nbr;
    int i;
    int len = count_len(nbr);
